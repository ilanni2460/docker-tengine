{
    "consul": "consul:8500",
    "services": [
        {
            "name": "webfront",
            "port": 80,
            "health": "wget -qO- http://localhost:80 > /dev/null",
            "poll": 3,
            "ttl": 10
        }
    ],
    "backends": [
        {
            "name": "node-hhvm",
            "poll": 3,
            "onChange": "consul-template -once -dedup -consul consul:8500  -template \"/etc/nginx/nginx.conf.ctmpl:/etc/nginx/nginx.conf:nginx -s reload\""
        }
    ]

}

